<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:id="@+id/relative"
    tools:context="com.nanodegree.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My NanoDegree Apps!"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:textColor="@color/fbutton_color_clouds"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:id="@+id/textView"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/spotifyButton"
        android:text="SPOTIFY STREAMER"
        android:textSize="15dp"
        fbutton:buttonColor="@color/fbutton_color_carrot"
        android:layout_height="55dp"
        android:layout_width="250dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/scoresButton"
        android:text="SCORES APP"
        android:textSize="15dp"
        android:layout_height="55dp"
        android:layout_width="250dp"
        fbutton:buttonColor="@color/fbutton_color_carrot"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_below="@+id/spotifyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/libraryAppButton"
        android:text="LIBRARY APP"
        android:textSize="15dp"
        fbutton:buttonColor="@color/fbutton_color_carrot"
        android:layout_height="55dp"
        android:layout_width="250dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_below="@+id/scoresButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/buildItButton"
        android:text="BUILD IT BIGGER"
        android:textSize="15dp"
        fbutton:buttonColor="@color/fbutton_color_carrot"
        android:layout_height="55dp"
        android:layout_width="250dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_below="@+id/libraryAppButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/xyzButton"
        android:text="XYZ READER"
        android:textSize="15dp"
        fbutton:buttonColor="@color/fbutton_color_carrot"
        android:layout_height="55dp"
        android:layout_width="250dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_below="@+id/buildItButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/capstoneButton"
        android:text="CAPSTONE: MY APP"
        android:textSize="15dp"
        android:textColor="@color/fbutton_color_clouds"
        fbutton:buttonColor="@color/capstone"
        android:layout_height="55dp"
        android:layout_width="250dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_below="@+id/xyzButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>

